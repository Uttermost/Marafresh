<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_nakumatt_categories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.truth.origicheck.myduka.CategoriesActivity"
        tools:showIn="@layout/activity_categories">
        <ImageView
            android:layout_marginTop="80dp"
            android:layout_width="@dimen/logo_w_h"
            android:layout_height="@dimen/logo_w_h"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/ic_launcher" />
        <Button
            android:id="@+id/animal_feeds"
            android:layout_width="match_parent"
            android:text="Animal feeds"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/maize_seeds"
            android:layout_width="match_parent"
            android:text="FEEDS RAW MATERIALS"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/mineral_supplemends"
            android:layout_width="match_parent"
            android:text="MINERAL SUPPLEMENTS"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/Lime"
            android:layout_width="match_parent"
            android:text="LIME"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/vegatable_seeds"
            android:layout_width="match_parent"
            android:text="LIVESTOCK CARE PRODUCTS"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/agro_chemicals"
            android:layout_width="match_parent"
            android:text="Fertilizers"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/livestock_vet_drugs"
            android:layout_width="match_parent"
            android:text="Folier Fertilizers"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/fertilizers"
            android:layout_width="match_parent"
            android:text="mineral supplemends"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/folier_fertilizers"
            android:layout_width="match_parent"
            android:text="SPRAY PUMPS"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/poultry_vet_products"
            android:layout_width="match_parent"
            android:text="CHICKEN DRINKERS and FEEDERS"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/farm_tools"
            android:layout_width="match_parent"
            android:text="MAIZE SEEDS"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/grain_storage_bags"
            android:layout_width="match_parent"
            android:text="VEGETABLE SEEDS"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/AGROCHEMICALS"
            android:layout_width="match_parent"
            android:text="AGROCHEMICALS"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/FARM_TOOLS"
            android:layout_width="match_parent"
            android:text="FARM TOOLS"
            android:layout_height="wrap_content" />



    </LinearLayout>
</ScrollView>