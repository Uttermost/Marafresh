<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:fillViewport="false">

    <LinearLayout android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_marginTop="60dp"

            android:gravity="left"
            android:layout_marginLeft="@dimen/space20"
            android:textColor="@color/black"


            android:layout_alignParentBottom="true"
            android:text="Create Your Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_regular"
            android:textSize="@dimen/space14"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:text="Names"
                android:fontFamily="@font/product_sans_regular"
                android:textSize="14sp"
                android:layout_marginLeft="19.5dp"
                android:textColor="@color/green"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp">

                <EditText
                    android:hint="First Name"
                    android:id="@+id/Displayname"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:maxLines="1"
                    android:textSize="12dp"
                    android:background="@drawable/bt_shape"
                    android:drawableTint="@color/green"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColorHint="#7137474f"

                    />

                <EditText
                    android:layout_marginTop="@dimen/space10"
                    android:hint="Last Name"
                    android:id="@+id/LastName"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="12dp"
                    android:background="@drawable/bt_shape"

                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColorHint="#7137474f"

                    />


            </LinearLayout>




            <LinearLayout
                android:id="@+id/ResidenceLinear"
                android:layout_marginTop="@dimen/space10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/ResidenceTxt"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="24dp"
                    android:text="Residence"
                    android:layout_marginLeft="19.5dp"
                    android:textColor="@color/green"
                    />

                <EditText
                    android:layout_margin="10dp"
                    android:hint="Residence"
                    android:id="@+id/Residence"
                    android:editable="false"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:background="@drawable/bt_shape"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    android:drawableTint="@color/green"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="16dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColorHint="#7137474f"

                    />


            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="@dimen/space10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp">

                <EditText
                    android:hint="Email"
                    android:id="@+id/emailaddess"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:background="@drawable/bt_shape"
                    android:drawableRight="@drawable/ic_baseline_email_24"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:textSize="12dp"
                    android:drawableTint="@color/green"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="16dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColorHint="#7137474f"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/space10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp">

                <EditText
                    android:hint="Phonenumber"
                    android:id="@+id/Phonenumber"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:background="@drawable/bt_shape"
                    android:drawableRight="@drawable/ic_baseline_phone_24"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:textSize="12dp"
                    android:drawableTint="@color/green"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="16dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColorHint="#7137474f"

                    />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textSize="14sp"
                    android:layout_marginLeft="19.5dp"
                    android:textColor="@color/green"
                    android:text="Gender?"/>



                <Spinner
                    android:layout_margin="7dp"
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:background="@drawable/bt_shape"
                    android:textColorHint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:spinnerMode="dialog"
                    android:layout_marginLeft="7dp"
                    >

                </Spinner>

            </LinearLayout>
        </LinearLayout>




        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:id="@+id/btn_sub"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_height="wrap_content"
            app:strokeColor="#21B8EB"
            android:text="Proceed"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            app:strokeWidth="2dp"
            app:cornerRadius="10dp"
            android:textAllCaps="false"
            android:padding="20dp"
            android:layout_marginBottom="100dp"

            />

    </LinearLayout>


</ScrollView>

